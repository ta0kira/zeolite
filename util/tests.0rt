testcase "stdout writer" {
  success Test$run()
  require stdout "message"
  exclude stderr "message"
}

define Test {
  run () {
    ~ LazyStream<Formatted>$new().append("message").writeTo(SimpleOutput$stdout())
  }
}

concrete Test {
  @type run () -> ()
}


