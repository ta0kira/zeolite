testcase "basic error test" {
  error
  require "undefined"
  require "line 13"
}

concrete Test {
  @type execute () -> ()
}

define Test {
  execute () {
    ~ undefined()
  }
}


testcase "basic crash test" {
  crash Test$execute()
  require "failure message"
  require "line 30"
}

concrete Test {
  @type execute () -> ()
}

define Test {
  execute () {
    fail("failure message")
  }
}


testcase "basic success test" {
  success Test$execute()
}

concrete Test {
  @type execute () -> ()
}

define Test {
  execute () { }
}
