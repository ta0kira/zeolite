testcase "immutable concrete protects @value members" {
  error
  require "value"
  require "read-only"
}

concrete Test {
  immutable
}

define Test {
  @value Int value

  @value call () -> ()
  call () {
    value <- 2
  }
}


testcase "immutable concrete skips @category members" {
  compiles
}

concrete Test {
  immutable
}

define Test {
  @category Int value <- 0

  @value call () -> ()
  call () {
    value <- 2
  }
}


testcase "immutable is transitively inherited from @value interface" {
  error
  require "value"
  require "read-only"
}

@value interface Base0 {
  immutable
}

@value interface Base1 {
  refines Base0
}

concrete Test {
  refines Base1
}

define Test {
  @value Int value

  @value call () -> ()
  call () {
    value <- 2
  }
}


