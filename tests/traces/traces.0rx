    } elif (false) {  // TRACED
      String alternative <- "elif"  // TRACED
    } else {
      String alternative <- "else"  // TRACED
    }

    scoped {
      Int i <- 0  // TRACED
    } cleanup {
      fail("cleanup")  // TRACED
    } in while (i < 10) {  // TRACED
      String repeat <- "while"  // TRACED
    } update {
      i <- i+1  // TRACED
    }

    String unreachable <- "unreachable lines should not have a trace entry"
  }
