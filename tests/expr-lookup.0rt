testcase "bad macro name" {
  error
  require "UNKNOWN_STRING .+not defined"
}

define Test {
  run () {
    String value <- $ExprLookup[UNKNOWN_STRING]$
  }
}

concrete Test {
  @type run () -> ()
}


testcase "MODULE_PATH is absolute" {
  crash Test$run()
  require "Failed condition: /.+/tests"
}

define Test {
  run () {
    fail($ExprLookup[MODULE_PATH]$)
  }
}

concrete Test {
  @type run () -> ()
}


