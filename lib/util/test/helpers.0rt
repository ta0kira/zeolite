concrete IgnoreCase {
  defines Equals<Char>
}

define IgnoreCase {
  equals (x,y) {
    return toLower(x) == toLower(y)
  }

  @type toLower (Char) -> (Char)
  toLower (c) {
    if (c >= 'A' && c <= 'Z') {
      return (c.asInt() - 'A'.asInt() + 'a'.asInt()).asChar()
    } else {
      return c
    }
  }
}

unittest reversed {
  \ Testing.checkFalse(0 `Reversed<Int>.lessThan` 0)
  \ Testing.checkFalse(0 `Reversed<Int>.lessThan` 1)
  \ Testing.checkTrue(1 `Reversed<Int>.lessThan` 0)
}

