// Author: Kevin P. Barry [ta0kira@gmail.com]

testcase "input tests" {
  success TestChecker
}

unittest integration {
  TextStream input <- "word\nanother\n"

  \ input.atEnd() `Matches:with` Value:equals(false)
  \ input.current() `Matches:with` Value:equals('w')
  \ input.preview() `Matches:with` Value:equals("")
  \ input.currentLine() `Matches:with` Value:equals(1)
  \ input.currentChar() `Matches:with` Value:equals(1)

  \ input.forward().forward()
  \ input.atEnd() `Matches:with` Value:equals(false)
  \ input.current() `Matches:with` Value:equals('r')
  \ input.preview() `Matches:with` Value:equals("wo")
  \ input.currentLine() `Matches:with` Value:equals(1)
  \ input.currentChar() `Matches:with` Value:equals(3)
}
