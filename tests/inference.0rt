testcase "clashing param filter in the same scope" {
  success
}

unittest test {
  \ Test.get1<Int>()
}

concrete Test {
  @type get1<#x>
    #x requires Int
  () -> ()
}

define Test {
  get1 () {
    String value <- get2<?>("message")
  }

  @type get2<#x> (#x) -> (#x)
  get2 (x) {
    return x
  }
}


